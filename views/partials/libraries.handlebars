<script type="text/hyperscript">
behavior radio(default, name, isInteger)
  set :children to <*/> in me
  set :selected to first <*[value=`${default}`]/> in me
  set :field to first <input/> in me
  init
    send toggle(value: true) to :selected
    set :field's @value to :selected's @value
  end
  on click from :children
    if :selected is not it
      send toggle(value: false) to :selected
      send toggle(value: true) to it
      set :selected to it
      set :field's @value to it's @value
      send change(value: it's @value) to :field
    end
end
</script>