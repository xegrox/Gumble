<button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal_add">
  Add Table
</button>
<div class="modal fade" tabindex="-1" id="modal_add">
  <div class="modal-dialog modal-dialog-centered">
    <form class="modal-content" hx-post="/dashboard/clerk/tables" hx-swap="none"_="
    install repeatPassword
    on htmx:afterRequest(detail)
      if detail.successful
        set close to first .btn-close in me
        call close.click()
        trigger success
      else
        add .is-invalid to first <input[name='table_no']/> in me
      end
    ">
      <div class="modal-header">
        <h5 class="modal-title">Add New Table</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body p-4">
        <label>Table number</label>
        <div class="input-group has-validation mb-3">
          <input type="number" class="form-control" min="1" name="table_no" required>
          <div class="invalid-feedback">
            Table number already exists
          </div>
        </div>
        <label>Capacity</label>
        <input type="number" class="form-control" value="2" min="1" name="capacity" required>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
    </form>
  </div>
</div>